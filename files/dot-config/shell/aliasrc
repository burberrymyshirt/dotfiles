# Laradock work alias
alias ld='cd ~/work/laradock'
alias lup='ld && docker-compose up -d --force-recreate nginx mariadb redis workspace mailhog'
alias lssh='ld && sh bash-80.sh'
alias lssh82='ld && sh bash-82.sh'
alias lssh83='ld && sh bash.sh'
alias ldown='ld && docker-compose down'
alias coressh='lssh'
alias externalssh='lssh83'
alias workspacessh='lssh83'
alias claimssh='lssh82'
